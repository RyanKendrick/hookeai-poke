    crossorigin="anonymous">
</head>


<body>
  <nav>
     <% include ./partials/_header %>
    </nav>

  <header id="header-container">
    <h1>Check out whats on the menu today!</h1>
    <h2>(and every day)</h2>
  </header>

  <section id="full-menu-container">
    <% menu.forEach(function(menuItem){ %>
      <div class="menu-item-container">
        <span> <%- menuItem.name %> - $<%- menuItem.price/100 %> </span>
        <img class="menu-item-pic" src="../pictures/food/pokebowl2.jpg">
        <button class="btn btn-primary" type="button" onclick="addToCart(<%- menuItem.id %>)">Add To Cart!</button>
      </div>
    <% }); %>
  </section>

  <section id="checkout-button-container" class="item">
    <form action="/orders/checkout" method="GET">
      <input id="itemsIdForm" type="hidden" value="">
      <input class="checkout-button" type="submit" value="Proceed to Checkout">
    </form>
  </section>

  <footer>
      <% include ./partials/_footer %>
  </footer>

  <!-- JS & JQuery   -->
