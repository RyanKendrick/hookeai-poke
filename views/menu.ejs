<body>
  <nav>
    <!-- insert header partial here -->
  </nav>

  <header id="header-container">
    <h1>Check out whats on the menu today!</h1>
    <h2>(and every day)</h2>
  </header>

  <section id="full-menu-container">

    <% menu.forEach(function(menuItem){ %>
      <div class="menu-item-container">
        <span > <%- menuItem.name %> </span>
        <img class="menu-item-pic" src="../pictures/food/pokebowl2.jpg">
        <input class="btn btn-primary" type="submit" value="Add To Cart!">
      </div>
    <% }); %>

  </section>

  <section id="checkout-button-container" class="item">
    <a href="./checkout"><input class="btn btn-primary" type="submit" value="Proceed to checkout"></a>
  </section>

  <footer>
    <!-- insert footer partial here -->
  </footer>

  <!-- JS & JQuery   -->
